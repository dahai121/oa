			$where = array();
			if($catid) $where['catid'] = (int) $catid;
			if($genrevar) $where['genre'] = (int) $genrevar;
            if($receivevar) $where['receive'] = (int) $receivevar;
			if($titlevar){
				$titlesql = " AND title LIKE "."'%".$titlevar."%'";
			}else{
