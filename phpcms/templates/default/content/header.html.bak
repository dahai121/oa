<div class="body-top"></div>

{if !$catid}
<script type="text/javascript">
$(function(){
	$('#tog').toggle(function(){
		$(this).animate({top:'333px'},320).addClass("togclose").removeClass("tog").html('<span>关闭</span>');
		$('.tog_contact').slideDown(320);
	},function(){
		$(this).animate({top:'40px'},320).addClass("tog").removeClass("togclose").html('<span>重要信息提示</span>');
		$('.tog_contact').slideUp(320);
	})
});
</script>

<!-- 代码 开始 -->
<div class="tog_contact">
	<div class="t_con_box">
			<ul class="list">
					 {pc:content  action="position" posid="2" order="listorder DESC" num="10"}
        	 {loop $data $v}
											<li><span class="rt">{date('m-d',$v[inputtime])}</span><span class="title"><img src="images/dian.png" width="5px" height="5px" alt="" /><div class="catid">{$CATEGORYS[$v['catid']]['catname']}</div><a href="{$v['url']}" target="_blank" title="{$v['title']}"{title_style($v[style])}>{str_cut($v['title'],46)}</a></span></li>
           {/loop}  
           {/pc}   
			</ul>
	</div>
</div>
<div class="tog" id="tog"><span>重要信息提示</span></div>
{/if}
